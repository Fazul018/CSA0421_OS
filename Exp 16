#include <stdio.h>

int main() {
    int b[10], p[10], n, m;

    printf("Blocks: ");
    scanf("%d", &n);
    printf("Enter block sizes:\n");
    for (int i=0;i<n;i++) scanf("%d",&b[i]);

    printf("Processes: ");
    scanf("%d", &m);
    printf("Enter process sizes:\n");
    for (int i=0;i<m;i++) scanf("%d",&p[i]);

    printf("\nAllocation (First Fit):\n");
    for (int i=0;i<m;i++) {
        int allocated = 0;
        for (int j=0;j<n;j++) {
            if (b[j] >= p[i]) {
                printf("P%d -> Block %d\n", i+1, j+1);
                b[j] -= p[i];
                allocated = 1;
                break;
            }
        }
        if (!allocated)
            printf("P%d -> Not Allocated\n", i+1);
    }

    return 0;
}



input :
Blocks: 3
Enter block sizes:
100
300
200
Processes: 3
Enter process sizes:
120
80
250


output ;
Allocation (First Fit):
P1 -> Block 2
P2 -> Block 1
P3 -> Block 2
