#include <stdio.h>
#include <sys/stat.h>

int main() {
    char filename[] = "demo.txt";

    FILE *fp = fopen(filename, "w");
    fprintf(fp, "Linux permissions demo");
    fclose(fp);

    chmod(filename, 0644);

    struct stat st;
    stat(filename, &st);

    printf("File: %s\n", filename);
    printf("Permissions: %o\n", st.st_mode & 0777);

    return 0;
}



output :
File: demo.txt
Permissions: 644
