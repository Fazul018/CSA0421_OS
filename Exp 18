#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, i, j, temp, size;
    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size (max cylinder): ");
    scanf("%d", &size);

    // Sort requests
    for(i = 0; i < n-1; i++)
        for(j = i+1; j < n; j++)
            if(req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int total = 0;
    int pos = 0;

    // find first request greater than head
    for(i = 0; i < n; i++)
        if(req[i] > head) {
            pos = i;
            break;
        }

    printf("\nOrder: %d", head);

    // Move right
    for(i = pos; i < n; i++) {
        total += abs(head - req[i]);
        head = req[i];
        printf(" -> %d", head);
    }

    // Go to end of disk
    total += abs(head - (size - 1));
    head = size - 1;

    // Move left
    for(i = pos - 1; i >= 0; i--) {
        total += abs(head - req[i]);
        head = req[i];
        printf(" -> %d", head);
    }

    printf("\nTotal head movement = %d\n", total);
    return 0;
}


input ;
Enter number of requests: 7
Enter request sequence: 82 170 43 140 24 16 190
Enter initial head position: 50
Enter disk size: 200


output ;
Order: 50 -> 82 -> 140 -> 170 -> 190 -> 199 -> 43 -> 24 -> 16
Total head movement = 391
