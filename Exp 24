#include <stdio.h>
#include <sys/stat.h>

int main() {
    char fname[50];
    struct stat st;

    printf("Enter file name: ");
    scanf("%s", fname);

    if (stat(fname, &st) != 0) {
        printf("Error: File not found.\n");
        return 1;
    }

    printf("\nFile Permissions:\n");

    printf("User  : ");
    printf( (st.st_mode & S_IRUSR) ? "r" : "-");
    printf( (st.st_mode & S_IWUSR) ? "w" : "-");
    printf( (st.st_mode & S_IXUSR) ? "x" : "-");
    printf("\n");

    printf("Group : ");
    printf( (st.st_mode & S_IRGRP) ? "r" : "-");
    printf( (st.st_mode & S_IWGRP) ? "w" : "-");
    printf( (st.st_mode & S_IXGRP) ? "x" : "-");
    printf("\n");

    printf("Others: ");
    printf( (st.st_mode & S_IROTH) ? "r" : "-");
    printf( (st.st_mode & S_IWOTH) ? "w" : "-");
    printf( (st.st_mode & S_IXOTH) ? "x" : "-");
    printf("\n");

    printf("\nTypes of Users:\n");
    printf("User  : Owner of the file\n");
    printf("Group : Users who belong to the same group\n");
    printf("Others: All remaining users\n");

    return 0;
}


input :
Enter file name: demo.txt


output :
User  : rw-
Group : r--
Other : r--
