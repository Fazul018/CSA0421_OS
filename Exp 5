#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int pid[n], bt[n], pr[n]; 
    int wt[n], tat[n];

    for (int i = 0; i < n; i++) {
        pid[i] = i + 1;
        printf("Enter Burst Time and Priority for Process %d: ", pid[i]);
        scanf("%d %d", &bt[i], &pr[i]);
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (pr[i] > pr[j]) {
                int temp;

                temp = pr[i];  pr[i] = pr[j];  pr[j] = temp;
                temp = bt[i];  bt[i] = bt[j];  bt[j] = temp;
                temp = pid[i]; pid[i] = pid[j]; pid[j] = temp;
            }
        }
    }

    wt[0] = 0;
    for (int i = 1; i < n; i++) {
        wt[i] = wt[i - 1] + bt[i - 1];
    }

    for (int i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
    }

    printf("\nP\tBT\tPR\tWT\tTAT\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n", pid[i], bt[i], pr[i], wt[i], tat[i]);
    }

    return 0;
}



input :
Enter number of processes: 4
Enter Burst Time and Priority for Process 1: 5 2
Enter Burst Time and Priority for Process 2: 3 1
Enter Burst Time and Priority for Process 3: 8 4
Enter Burst Time and Priority for Process 4: 6 3


output :
P   BT   PR   WT   TAT
P2  3    1    0    3
P1  5    2    3    8
P4  6    3    8   14
P3  8    4   14   22
